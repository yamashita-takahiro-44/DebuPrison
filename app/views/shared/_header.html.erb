<header data-theme="retro" class="py-10 bg-blue-500">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center">
    <div class="font-title">
      <%= link_to "Diet Challenge", root_path, class: "text-5xl text-headfoot" %>
    </div>
    <div class="md:ml-auto flex flex-wrap items-center text-base md:text-xl justify-center">
      <%= link_to (t 'dashboards.show.title'), dashboard_path, class: "btn mr-5 text-headfoot"%>
      <%= link_to (t "profiles.show.title"), profile_path, class: "btn mr-5 text-headfoot" %>
      <%= button_to (t 'defaults.logout'), destroy_user_session_path, method: :delete, class: "btn mr-5 text-headfoot" %>
      <div class="avatar">
        <div class="w-16 rounded-full">
          <%= image_tag current_user.avatar.present? ? current_user.avatar.url : 'default-avatar.png' %>
        </div>
      </div>
    </div>
  </div>
</header>
