<div class="card w-96 shadow-xl post_image m-3">
  <figure class="p-5"><%= image_tag post.image.url, alt:"Posts" %></figure>
  <div class="card-body items-center justify-center text-center flex space-between">
    <h2 class="text-xl py-2 link link-primary">
      <%= link_to post.title, post_path(post) %>
    </h2>
    <div class="flex items-center">
      <p class="text-xl p-2"><%= post.user.name %></p>
        <div class="avatar">
        <div class="w-8 h-8 rounded-full">
        <%= image_tag post.user.avatar.present? ? post.user.avatar.url : 'default-avatar.png' %>
        </div>
        </div>
      </div>
    </div>
    <div class="card-actions justify-end">
      <% if current_user && current_user == post.user %>
        <%= link_to  t('defaults.edit'), edit_post_path(post), class: "btn btn-accent" %>
        <%= link_to t('defaults.destroy'), post_path(post), data: { turbo_method: :delete, "turbo-confirm": (t 'defaults.destroy?') }, class: "btn btn-neutral" %>
      <% elsif current_user %>
      <% end %>
    </div>
  </div>
</div>
