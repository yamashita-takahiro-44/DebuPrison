<%= form_with model: post, local: true do |f| %>
  <div class="flex items-center justify-center text-center relative">
    <%= render 'shared/error_messages', object: f.object %>
  </div>
  <div class="flex items-center justify-center text-center relative pb-8">
    <div class="form-group items-center text-2xl">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control input input-bordered input-primary w-full' %>
    </div>
    <div class="flex items-center justify-center text-center relative pb-8">
    <div class="form-group items-center text-2xl">
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control input input-bordered input-primary w-full' %>
    </div>
  <div class="flex items-center justify-center text-center relative">
    <div class="form-group items-center text-2xl">
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control file-input file-input-bordered file-input-info w-full max-w-xs', accept: 'image/*' %>
      <%= f.hidden_field :image_cache %>
    </div>
  </div>
  <div class="flex items-center justify-center text-center relative pt-16">
    <div class="form-group items-center">
      <%= f.submit class: 'btn btn-primary font-bold' %>
    </div>
  </div>
<% end %>
