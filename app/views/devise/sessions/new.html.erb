<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4">
  <div class="max-w-md w-full bg-white p-8 rounded shadow-lg">
    <h2 class="text-center text-2xl font-bold mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border rounded focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border rounded focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between mt-4">
          <%= f.check_box :remember_me, class: "text-blue-600" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600 ml-2" %>
        </div>
      <% end %>

      <div class="actions mt-6">
        <%= f.submit "Log in", class: "w-full py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200 active:bg-blue-800" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
